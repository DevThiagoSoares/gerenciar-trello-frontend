{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",  // ou "react-jsxdev" se vocÃª estiver usando React 17 e superior
    "paths": {
      "*": ["src/*"]
    }
  },
    "include": ["./src/**/*.ts", "Config.d.ts"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }
  